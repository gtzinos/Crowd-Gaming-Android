<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tzinos.crowdgaming">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="tzinos.crowdgaming.Controller.LoginPageActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="tzinos.crowdgaming.Controller.MyQuestionnairesActiviry"
            android:noHistory="true" />
        <activity
            android:name="tzinos.crowdgaming.Controller.PlayQuestionnaireActivity"></activity>
        <activity
            android:name="tzinos.crowdgaming.Controller.AnswerQuestionGroupActivity" ></activity>
    </application>

</manifest>